{
  "name": "fontmon",
  "version": "1.0.0",
  "description": "A fontmanger made with electron",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "build": "next build renderer && next export renderer",
    "pack": "npm run build && build --dir",
    "dist": "npm run build && build -w"
  },
  "build": {
    "appId": "io.fontmon.app",
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "squirrel"
      ],
      "icon": "assets/icons/windows.ico"
    },
    "squirrelWindows": {
      "loadingGif": "assets/install-spinner.gif"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icons/mac.icns",
      "extendInfo": {
        "LSUIElement": 1
      }
    }
  },
  "keywords": [],
  "author": "Andy Bitz",
  "license": "MIT",
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "inline-react-svg"
    ]
  },
  "dependencies": {
    "app-root-path": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.3",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "babel-plugin-inline-react-svg": "^0.4.0",
    "electron": "^1.8.2-beta.2",
    "electron-builder": "^19.45.5",
    "electron-builder-lib": "^19.46.3",
    "electron-builder-squirrel-windows": "^19.46.0",
    "next": "^4.1.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  }
}
